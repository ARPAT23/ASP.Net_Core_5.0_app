@using EntityLayer.Concrete
@model List<Blog>


@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />


<style>

    .alert {
        background-color: #9bffa8;
        padding: 20px 40px;
        min-width: 450px;
        position: absolute;
        right: 0;
        top: 5px;
        border-radius: 4px;
        border-left: 10px solid #67ff02;
        overflow: hidden;
    }

        .alert .fa-check-circle {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #29ce00;
            font-size: 30px
        }

        .alert .msg {
            padding: 0px 20px;
            top: 50%;
            color: #75ce00;
            font-size: 18px;
        }

        .alert .close-btn {
            position: absolute;
            right: 0px;
            top: 50%;
            transform: translateY(-50%);
            background: #80ffa0;
            padding: 20px 18px;
            cursor: pointer;
        }

            .alert .close-btn:hover {
                background: #8aff66;
            }

    .none {
        display: none;
    }

    .show {
        animation: show_slide 1s ease forwards;
    }



    .hide {
        animation: hide_slide 1s ease forwards;
    }
</style>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Blog Listesi</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> # </th>
                        <th>Blog Başlığı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                        <th>Aktif / Pasif yap</th>
                    </tr>
                </thead>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
            <td><span class="badge badge-success">@item.Category.CategoryName</span> </td>
            <td>
                
                @if (item.BlogStatus)
                {
                          <span class="badge badge-success">Aktif</span>
                }
                else
                {
                          <span class="badge badge-secondary">Pasif</span>
                }
            </td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" onclick="return confirm('Silmek istediğine emin misin?');" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
                        <td>

                            @if (item.BlogStatus)
                            {
                                <a href="~/Blog/ChangeStatusBlog/@item.BlogID" id="Durum_@item.BlogID" class="btn btn-gradient-secondary">Pasif Yap</a>
                            }
                            else
                            {
                                <a href="~/Blog/ChangeStatusBlog/@item.BlogID" id="Durum_@item.BlogID" class="btn btn-gradient-success">Aktif Yap</a>
                            }

                        </td>

        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Oluştur</a>
    </div>












    </div>
</div>

