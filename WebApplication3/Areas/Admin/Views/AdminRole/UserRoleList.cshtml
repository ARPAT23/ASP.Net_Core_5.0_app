﻿@using EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NameSurname</td>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssignRole/@item.Id/" class="btn btn-outline-success">Rol Ata</a></td>
        </tr>
    }
  
</table>
@if (User.IsInRole("Admin"))
{
    <li>
        <a href="/Admin/AdminRole/Index"><i class="fa fa-info"></i> <span class="nav-label">Sistem Rolleri</span></a>
    </li>
}

